{
  "manifest_version": 3,
  "name": "Chat with Webpage",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/chatwithwebpage.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"]
}
